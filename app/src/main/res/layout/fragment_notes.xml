<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/nunito_sans_regular"
        android:text="@string/title_date"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:gravity="center_vertical"
        android:text="@string/msg_notes_title"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_date" />

    <EditText
        android:id="@+id/edit_text_search"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="11dp"
        android:autofillHints="name"
        android:background="@drawable/custom_default_shape"
        android:fontFamily="@font/nunito_sans_regular"
        android:hint="@string/msg_search"
        android:inputType="text"
        android:paddingHorizontal="22dp"
        android:textColorHint="#78909C"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_notes"
        tools:ignore="VisualLintTextFieldSize" />

    <com.example.notesapp.presentation.views.CustomNotesCategoryView
        android:id="@+id/btn_all_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        app:category_background="@drawable/all_notes_background"
        app:category_color="@color/gray_2"
        app:category_icon="@drawable/ic_notes"
        app:category_name="@string/msg_all_notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_favourites"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_search" />

    <com.example.notesapp.presentation.views.CustomNotesCategoryView
        android:id="@+id/btn_favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="20dp"
        app:category_background="@drawable/favourites_background"
        app:category_color="@color/yellow"
        app:category_icon="@drawable/ic_favourite"
        app:category_name="@string/msg_favourites"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_search" />

    <com.example.notesapp.presentation.views.CustomNotesCategoryView
        android:id="@+id/btn_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        app:category_background="@drawable/hidden_background"
        app:category_color="@color/blue_3"
        app:category_icon="@drawable/ic_hidden"
        app:category_name="@string/msg_hidden"
        app:layout_constraintEnd_toStartOf="@id/btn_trash"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_all_notes" />

    <com.example.notesapp.presentation.views.CustomNotesCategoryView
        android:id="@+id/btn_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="20dp"
        app:category_background="@drawable/deleted_background"
        app:category_color="@color/red"
        app:category_icon="@drawable/ic_trash"
        app:layout_constraintRight_toRightOf="parent"
        app:category_name="@string/msg_trash"
        app:layout_constraintTop_toBottomOf="@id/btn_favourites"
        tools:layout_editor_absoluteX="208dp" />


    <TextView
        android:id="@+id/tv_title_recent_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/title_recent_notes"
        android:textSize="19sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_hidden" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_recent_note"
        app:spanCount="2"
        tools:itemCount="2"
        tools:listitem="@layout/item_recent_note" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notes_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="22dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_recent_note"
        tools:itemCount="30"
        tools:listitem="@layout/item_note" />

</androidx.constraintlayout.widget.ConstraintLayout>